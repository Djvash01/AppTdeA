<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <form action="/api/courses/enroll/?_method=PUT" class="card card-body was-validated" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <h4 class="card-title">Registrate en un curso</h4>
                </div>
                <div class="form-group">
                    <select class="custom-select" name="id"  required>
                        <option value="">Seleciona un curso</option>
                        {{#each courses}}
                        <option value="{{_id}}">{{nameCourse}}</option>
                        {{/each}}
                    </select>
                    <div class="invalid-feedback">Seleccione un curso valido</div>
                </div>
                <div class="form-group">
                    <input type="text" name="dni" class="form-control" placeholder="Documento de identidad" required>
                </div>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre completo" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Correo electronico" required>
                </div>
                <div class="form-group">
                    <input type="text" name="phone" class="form-control" placeholder="Telefono" required>
                </div>
                <button class="btn btn-success btn-block" type="submit">
                    Registrarse
                </button>
            </form>
        </div>
        <div class="col-md-8">
            <div class="accordion" id="accordionCourses">
                <div class="card">
                    <h4 class="mx-auto">Cursos Disponibles</h4>
                    {{#each courses}}
                    <div class="card-header" id="{{id}}">
                        <h2 class="mb-0">
                            <button class="btn btn-info btn-block collapsed" type="button"
                                data-toggle="collapse" data-target="#collapse{{id}}" aria-expanded="false"
                                aria-controls="collapse{{id}}">
                                {{nameCourse}} <br> <strong>Descripcion: </strong>{{description}} <strong>Costo:
                                </strong>{{cost}}
                            </button>
                        </h2>
                    </div>
                    <div id="collapse{{id}}" class="collapse" aria-labelledby="{{id}}" data-parent="#accordionCourses">
                        <div class="card-body">
                            <p class="card-text"><strong>Descripcion: </strong>{{description}}</p>
                            <p class="card-text"><strong>Modalidad: </strong>{{mode}}</p>
                            <p class="card-text"><strong>Duraccion: </strong>{{hours}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
</div>