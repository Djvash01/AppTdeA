<div class="container p-4">
    <div class="row">
        <div class="col-md-8">
            <div class="accordion" id="accordionCourses">
                {{#each courses}}
                    <div class="card">
                    <div class="card-header" id="{{id}}">
                        <h2 class="mb-0">
                            <button class="btn btn-outline-info btn-block collapsed" type="button" data-toggle="collapse"
                                data-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                                {{nameCourse}}
                            </button>
                        </h2>
                        <p class="card-text">
                            <strong>Descripcion: </strong>{{description}}
                            <br>
                            <strong>Costo: </strong>{{cost}}
                        </p>
                    </div>
                    <div id="collapse{{id}}" class="collapse" aria-labelledby="{{id}}" data-parent="#accordionCourses">
                        <div class="card-body">
                            <p class="card-text"><strong>Descripcion: </strong>{{description}}</p>
                            <p class="card-text"><strong>Modalidad: </strong>{{mode}}</p>
                            <p class="card-text"><strong>Duraccion: </strong>{{hours}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>