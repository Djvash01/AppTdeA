<div class="row">
    {{#each events}}
        <div class="col-md-4 p-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/api/events/edit/{{_id}}" ><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{content}}</p>
                    
                </div>
                <div class="card-footer">
                    <p><strong>Encargado:</strong>  {{supervisor}} </p>
                    <p> <strong>Inicia:</strong>  {{startDate}}</p>
                    <p><strong>Termina:</strong> {{finishDate}}</p>
                   <form action="/api/events/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                         <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Eliminar
                        </button>
                   </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>